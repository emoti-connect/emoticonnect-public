import SwiftUI

struct ContentView: View {
    @State private var isRecording = false
    @State private var currentEmotion: Emotion = .neutral
    
    let emotions: [Emotion] = [.neutral, .sadness, .happiness, .anger, .fear]
    
    var body: some View {
        VStack {
            Text(currentEmotion.rawValue)
                .font(.title)
            
            EmojiView(emotion: currentEmotion)
                .font(.system(size: 80))
            
            Button(action: {
                isRecording.toggle()
                currentEmotion = isRecording ? emotions.randomElement()! : .neutral
            }) {
                Text(isRecording ? "Stop Recording" : "Start Recording")
                    .padding()
                    .foregroundColor(isRecording ? Color.red : Color.green)
                    .font(.headline)
                    .cornerRadius(10)
            }
        }
    }
}

struct EmojiView: View {
    let emotion: Emotion
    
    var body: some View {
        switch emotion {
        case .neutral:
            return Text("ğŸ˜")
        case .sadness:
            return Text("ğŸ˜¢")
        case .happiness:
            return Text("ğŸ˜ƒ")
        case .anger:
            return Text("ğŸ˜¡")
        case .fear:
            return Text("ğŸ˜¨")
        }
    }
}

enum Emotion: String {
    case neutral = "Neutral"
    case sadness = "Sadness"
    case happiness = "Happiness"
    case anger = "Anger"
    case fear = "Fear"
}



struct ContentView_Previews: PreviewProvider {
    static var previews: some View {
        ContentView()
    }
}
